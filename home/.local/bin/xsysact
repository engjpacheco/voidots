#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ğŸ”’ lock\nğŸšª leave xmonad\nâ™»ï¸ renew xmonadd\nğŸ» hibernate\nğŸ’¤ sleep\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ“º display off" |dmenu -i -l 20 -p 'Action: ' -c)" in
	'ğŸ”’ lock') slock ;;
	'ğŸšª leave dwm') kill -TERM "$(pgrep -u "$USER" "\bxmonad$")" ;;
	'â™»ï¸ renew dwm') xmonad --recompile ; xmonad --restart ;;
	'ğŸ» hibernate') slock $ctl hibernate ;;
	'ğŸ’¤ sleep') slock $ctl suspend ;;
	'ğŸ”ƒ reboot') $ctl reboot ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
